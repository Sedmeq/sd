            <p>{{ comment.text }}</p>
            <small class="text-gray-500">{{ comment.created_at|date:"F j, Y, g:i a" }}</small>
          </div>
        {% empty %}
          <p>No comments yet. Be the first!</p>
        {% endfor %}
        
